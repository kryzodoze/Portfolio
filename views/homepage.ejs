<%- layout('layouts/boilerplate') %>
<!-- pre loader -->
<div class="loader-container">
    <img draggable="false" src="/images/preloader.gif" alt="">
</div>

<!-- hero section starts -->
<section class="home" id="home">
    <div id="particles-js"></div>

    <div class="content">
        <h3>Hey!<br /> I'm Keith <span>Thomas</span></h3>
        <p>i create <span class="typing-text"></span></p>
        <!-- Social Links -->
        <div class="socials">
            <ul class="social-icons">
                <li><a class="linkedin" href="https://www.linkedin.com/in/keith--thomas/" target="_blank"><i
                            class="fab fa-linkedin"></i></a></li>
                <li><a class="github" href="https://github.com/kryzodoze" target="_blank"><i
                            class="fab fa-github"></i></a>
                <li><a class="twitter" href="https://twitter.com/Kryzodoze" target="_blank"><i
                            class="fab fa-twitter"></i></a>
