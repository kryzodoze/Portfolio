<!-- hero section ends -->


<!-- about section starts -->
<section class="about" id="about">
    <h2 class="heading"><i class="fas fa-user-alt"></i> About <span>Me</span></h2>

    <div class="row">

        <div class="image">
            <img draggable="false" class="tilt" src="images/profilePhoto3.png" alt="">
        </div>
        <div class="content">
            <h3>I'm Keith</h3>
            <span class="tag">Freelance Software Engineer</span>
            <p style="text-transform: none" >I left big tech a few years ago to pursue my dream of being my own boss. Since then I've taken
                on a number of clients, and am always looking for more! I'm most comfortable in a game engine
                (or at least a 3D library like three.js/babylon.js). Reach out for a quote or just to say hi,
                I'm happy to chat about the problem you're facing if I have the time!
            </p>

            <div class="box-container">
                <div class="box">
                    <p><span> age: </span> 31</p>
                    <p><span> work experience : </span> 7 years</p>
                </div>
                <div class="box">
                    <p><span> email : </span> <span class="nonSelectable">
                        keithwthomas1
                        <img width="16px" height="16px" src="images/@.png"/>
                        gmail.com</span>
                    </p>
                    <p><span> place : </span> Chicago, IL</p>
                </div>
            </div>
            <!-- Resume Download Button -->
            <div class="resumebtn">
                <a href="pdf/2022FallResume.pdf" class="btn" download=""><span>Download Resume</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>

        </div>
    </div>
</section>
<!-- about section ends -->


<!-- work project section starts -->
<section class="work" id="work">

    <h2 class="heading"><i class="fas fa-laptop-code"></i> Projects <span>Made</span></h2>

    <div class="box-container">
        <% for(let i = 0; i < 6; i++) { %>
        <div class="box tilt">
            <img draggable="false" src="<%=projects[i].image%>" alt="Project Image" />
            <div class="content">
                <div class="tag">
                    <h3><%=projects[i].name%> </h3>
                </div>
                <div class="desc">
                    <p style="text-transform: none"><%=projects[i].desc%> </p>
                    <div class="technology">
                        <% for(let j = 0; j < projects[i].tech.length; j++) { %>
                        <div class="skillbar" style="transform: scale(<%=projects[i].techScale%>);">
                            <div class="info">
                                <span style="color:white;"><%=projects[i].tech[j].name%></span>
                                <span style="color:white;"><%=projects[i].tech[j].value%></span>
                            </div>
                            <div class="line" style="width: <%=projects[i].tech[j].value%>; background: <%=projects[i].tech[j].color%>;"></div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <div class="viewall">
        <a href="/project" class="btn"><span>View All</span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>

</section>
<!-- work project section ends -->

